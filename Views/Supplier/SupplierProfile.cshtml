@model LoginandR.Models.Supplier

@{
    ViewBag.Title = "Account Information";
    Layout = "~/Views/Shared/_SupplierLayout.cshtml";
}

<section>

    <div class="container py-5">
        <div class="row">
            <div class="col-lg-4">
                <div class="card mb-1">
                    <div class="card-body text-center">
                        <img src="@Url.Content(Model.supImg)" alt="Image for @Html.DisplayFor(model => model.supName)" class="rounded-circle img-fluid" style="width: 189px;">
                        <br />
                        <a href="@Url.Action("ChangeAvatar","Supplier")" class="btn btn-outline-info">Change Avatar</a>
                        <hr />
                        <h5 class="my-3">@Html.DisplayFor(model => model.supName)</h5>
                        @*<p class="text-muted mb-1">Full Stack Developer</p>
        <p class="text-muted mb-4">Bay Area, San Francisco, CA</p>*@
                        <div class="d-flex justify-content-center mb-2">
                            <button type="button" class="btn btn-outline-secondary mr-2">@Html.ActionLink("Edit", "Edit", new { id = Session["ID"] })</button>
                            <button type="button" class="btn btn-outline-primary ms-1">@Html.ActionLink("Back to Dashboard", "Index", "Supplier")</button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-8">
                <div class="card mb-4">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">@Html.DisplayNameFor(model => model.supEmail)</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">@Html.DisplayFor(model => model.supEmail)</p>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">@Html.DisplayNameFor(model => model.supPhone)</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">@Html.DisplayFor(model => model.supPhone)</p>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">@Html.DisplayNameFor(model => model.supAddress)</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">@Html.DisplayFor(model => model.supAddress)</p>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">@Html.DisplayNameFor(model => model.supDescription)</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">@Html.DisplayFor(model => model.supDescription)</p>
                            </div>
                        </div>                        
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>