@model LoginandR.Models.User

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutPage2.cshtml";
}
<center>
    <div class="form-horizontal">
        <h4>User</h4>
        <hr />
        <dl class="dl-horizontal">
        </dl>

        @using (Html.BeginForm())
        {
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.uID)
            @Html.HiddenFor(model => model.uUsername)
            @Html.HiddenFor(model => model.uPwd)
            @Html.HiddenFor(model => model.ConfirmPassword, new { Value = Model.uPwd })


            <div class="form-group">
                @Html.LabelFor(model => model.uFirstname, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-3">
                    @Html.EditorFor(model => model.uFirstname, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.uLastname, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-3">
                    @Html.EditorFor(model => model.uLastname, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                </div>
            </div>



            <div class="form-group">
                @Html.LabelFor(model => model.uPhone, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-3">
                    @Html.EditorFor(model => model.uPhone, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                </div>
            </div>


            <div class="form-group">
                @Html.LabelFor(model => model.uAddress, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-3">
                    @Html.EditorFor(model => model.uAddress, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                </div>
            </div>



            <div class="form-group">
                @Html.LabelFor(model => model.uBirthday, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-3">
                    @Html.EditorFor(model => model.uBirthday, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                </div>
            </div>



            <div class="form-group">
                @Html.LabelFor(model => model.uEmail, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-3">
                    @Html.EditorFor(model => model.uEmail, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                </div>
            </div>



            <div class="form-group">
                @Html.LabelFor(model => model.uGender, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-3">
                    @Html.EditorFor(model => model.uGender, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                </div>
            </div>

            if (Model.uCreditCard != null)
            {
                <div class="form-group">
                    @Html.LabelFor(model => model.uCreditCard, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-3">
                        @Html.EditorFor(model => model.uCreditCard, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                    </div>
                </div>
            }
            <div class="form-actions no-color">
                <input type="submit" value="Delete" class="btn btn-danger" /> 
                @Html.ActionLink("Back to List", "UserManagement", null, new { @class = "btn btn-dark" })
            </div>
        }
    </div>
</center>