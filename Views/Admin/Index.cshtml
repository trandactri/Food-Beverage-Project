
@{
    ViewBag.Title = "Admin - Dashboard";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="alert alert-danger alert-dismissible fade show" role="alert">
    <strong>Xin chào @Session["Fullname"].</strong> Ngày mới tốt lành
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<div class="alert alert-dark alert-dismissible fade show" role="alert">
    <strong>Hello @Session["Fullname"].</strong> Have a nice day
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<div class="alert alert-warning alert-dismissible fade show" role="alert">
    <strong>おはようございます @Session["Fullname"]さん.</strong> よい一日を
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<div class="alert alert-success alert-dismissible fade show" role="alert">
    <strong>Bonjour @Session["Fullname"].</strong> Bonne journée
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>