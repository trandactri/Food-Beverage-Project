@model LoginandR.Models.Admin

@{
    ViewBag.Title = "Account Information";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<section >

    <div class="container py-5">
        <div class="row">
            <div class="col-lg-4">
                <div class="card mb-1">
                    <div class="card-body text-center">
                        <img src="https://mdbootstrap.com/img/Photos/new-templates/bootstrap-chat/ava3.png" alt="avatar" class="rounded-circle img-fluid" style="width: 189px;">
                        <h5 class="my-3">@Html.DisplayFor(model => model.adFirstname) @Html.DisplayFor(model => model.adLastname)</h5>
                        @*<p class="text-muted mb-1">Full Stack Developer</p>
                            <p class="text-muted mb-4">Bay Area, San Francisco, CA</p>*@
                        <div class="d-flex justify-content-center mb-2">
                            <button type="button" class="btn btn-outline-secondary mr-2">@Html.ActionLink("Edit", "EditProfile", new { id = Session["ID"] })</button>
                            <button type="button" class="btn btn-outline-primary ms-1">@Html.ActionLink("Back to Dashboard", "Index", "Admin")</button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-8">
                <div class="card mb-4">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Full Name</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">@Html.DisplayFor(model => model.adFirstname) @Html.DisplayFor(model => model.adLastname)</p>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">@Html.DisplayNameFor(model => model.adEmail)</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">@Html.DisplayFor(model => model.adEmail)</p>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">@Html.DisplayNameFor(model => model.adPhone)</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">@Html.DisplayFor(model => model.adPhone)</p>
                            </div>
                        </div>
                        
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>