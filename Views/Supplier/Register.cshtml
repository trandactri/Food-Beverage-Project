@model LoginandR.Models.Supplier
@{
    Layout = null;
}
<script>
    setTimeout(function () {
        $('.badge').fadeOut('slow');
    }, 3000);

    function preview() {
        frame.src = URL.createObjectURL(event.target.files[0]);
    }
</script>
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Register</title>
    <link rel="stylesheet" href="~/Content/css/bootstrap.min.css">
    <!-- owl css -->
    <link rel="stylesheet" href="~/Content/css/owl.carousel.min.css">
    <!-- awesome fontfamily -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta2/css/all.min.css">
</head>
<body>
    <div>
        <section class="vh-100" style="background-color: #eee;">
            <div class="container h-100">
                <div class="row d-flex justify-content-center align-items-center h-100">
                    <div class="col-lg-12 col-xl-11">
                        <div class="card text-black" style="border-radius: 25px;">
                            <div class="card-body p-md-5">
                                <div class="row justify-content-center">
                                    <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

                                        <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Sign up for Supplier</p>

                                        @using (Html.BeginForm("Register", "Supplier", FormMethod.Post, new { enctype = "multipart/form-data" } ))

                                        {

                                            @Html.AntiForgeryToken()

                                            
                                            <div class="d-flex flex-row align-items-center mb-4">
                                                <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                                                <div class="form-outline flex-fill mb-0">
                                                    @Html.TextBoxFor(m => m.supName, "", new { @placeholder = "Supplier Name", @class = "form-control" })
                                                    @Html.ValidationMessageFor(m => m.supName, "", new { @class = "badge badge-danger" })
                                                </div>
                                            </div>

                                            <div class="d-flex flex-row align-items-center mb-4">
                                                <i class="fas fa-id-card fa-lg me-3 fa-fw"></i>
                                                <div class="form-outline flex-fill mb-0">
                                                    @Html.TextBoxFor(m => m.supUsername, "", new { @placeholder = "Username", @class = "form-control" })
                                                    @Html.ValidationMessageFor(m => m.supUsername, "", new { @class = "badge badge-danger" })
                                                </div>
                                            </div>

                                            <div class="d-flex flex-row align-items-center mb-4">
                                                <i class="fas fa-phone fa-lg me-3 fa-fw"></i>
                                                <div class="form-outline flex-fill mb-0">
                                                    @Html.TextBoxFor(m => m.supPhone, "", new { @placeholder = "Phone Number", @class = "form-control" })
                                                    @Html.ValidationMessageFor(m => m.supPhone, "", new { @class = "badge badge-danger" })
                                                </div>
                                            </div>

                                            <div class="d-flex flex-row align-items-center mb-4">
                                                <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                                                <div class="form-outline flex-fill mb-0">
                                                    @Html.TextBoxFor(m => m.supEmail, "", new { @placeholder = "Email", @class = "form-control" })
                                                    @Html.ValidationMessageFor(m => m.supEmail, "", new { @class = "badge badge-danger" })
                                                </div>
                                            </div>

                                            <div class="d-flex flex-row align-items-center mb-4">
                                                <i class="fas fa-location-arrow fa-lg me-3 fa-fw"></i>
                                                <div class="form-outline flex-fill mb-0">
                                                    @Html.TextBoxFor(m => m.supAddress, "", new { @placeholder = "Address", @class = "form-control" })
                                                    @Html.ValidationMessageFor(m => m.supAddress, "", new { @class = "badge badge-danger" })
                                                </div>
                                            </div>

                                            <div class="d-flex flex-row align-items-center mb-4">
                                                <i class="fas fa-info fa-lg me-3 fa-fw"></i>
                                                <div class="form-outline flex-fill mb-0">
                                                    @Html.TextBoxFor(m => m.supDescription, "", new { @placeholder = "Description", @class = "form-control" })
                                                    @Html.ValidationMessageFor(m => m.supDescription, "", new { @class = "badge badge-danger" })
                                                </div>
                                            </div>

                                            <div class="d-flex flex-row align-items-center mb-4">
                                                <i class="fas fa-upload fa-lg me-3 fa-fw"></i>
                                                <div class="form-outline flex-fill mb-0">
                                                    @*@Html.TextBoxFor(m => m.ImageFile, new { type = "file", @placeholder = "Image", @class = "form-control", onchange="preview()" }) *@
                                                    <input type="file" name="ImageFile" required onchange="preview()"/>
                                                    <img id="frame" src="" width="100" height="100" />
                                                    @Html.ValidationMessageFor(m => m.supImg, "", new { @class = "badge badge-danger" })
                                                </div>
                                            </div>

                                            <div class="d-flex flex-row align-items-center mb-4">
                                                <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                                                <div class="form-outline flex-fill mb-0">
                                                    @Html.PasswordFor(m => m.supPwd, new { @class = "form-control", @placeholder = "Password" })
                                                    @Html.ValidationMessageFor(m => m.supPwd, "", new { @class = "badge badge-danger" })

                                                </div>
                                            </div>

                                            <div class="d-flex flex-row align-items-center mb-4">
                                                <i class="fas fa-key fa-lg me-3 fa-fw"></i>
                                                <div class="form-outline flex-fill mb-0">
                                                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", @placeholder = "Confirm Password" })
                                                    @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "badge badge-danger" })
                                                </div>
                                            </div>


                                            <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                                                <a href="@Url.Action("Index","Home")" class="btn btn-outline-info btn-lg">Back to Home</a>
                                                <button type="submit" class="btn btn-primary btn-lg mr-2 ml-2">Register</button>
                                                <a href="@Url.Action("Login","Supplier")" class="btn btn-outline-info btn-lg">Back to Login</a>
                                            </div>



                                        }

                                    </div>
                                    <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">

                                        <img src="https://mdbootstrap.com/img/Photos/new-templates/bootstrap-registration/draw1.png" class="img-fluid" alt="Sample image">

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
    <footer>
        <script src="~/Scripts/jquery-3.4.1.min.js"></script>
        <script src="~/Scripts/bootstrap.min.js"></script>
    </footer>
</body>
</html>
